{
  "name": "eclipse-ws-server",
  "version": "1.0.0",
  "description": "WebSocket server for Eclipse Support Center real-time chat",
  "main": "dist/server.js",
  "scripts": {
    "dev": "dotenv -e .env -- tsx watch src/server.ts",
    "build": "dotenv -e .env -- tsc",
    "start": "dotenv -e .env -- node dist/server.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["websocket", "chat", "realtime"],
  "author": "Eclipse Support Center",
  "license": "MIT",
  "dependencies": {
    "@upstash/redis": "^1.28.4",
    "ws": "^8.18.0",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

