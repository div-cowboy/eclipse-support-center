{
  "name": "eclipse-ws-server",
  "version": "1.0.0",
  "description": "WebSocket server for Eclipse Support Center real-time chat",
  "main": "dist/server.js",
  "scripts": {
    "dev": "dotenv -e .env -- tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "websocket",
    "chat",
    "realtime"
  ],
  "author": "Eclipse Support Center",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
